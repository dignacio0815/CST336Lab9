<%- include("partials/header") %>
    <div class="container">
        <div class="jumbotron">
            <button id="searchAgain" class="col-sm-4 btn btn-primary btn-block" onclick="location.href='/';">Search Again</button>    
            <br>
            <div>
                <h3>The Authors:</h3> <br>
                <div class="row">
                    <% img.forEach(function(i){ %>
                        <img src="<%=i%>" height="30%" width="30%">
                    <% }) %>
                </div>
                <h3>The Quotes:</h3>
                <% for(let i = 0; i < data.length; i++) { %>
                    <div>Author: 
                        <a href='/results/<%=data[i].authorId%>' class="btn btn-primary"><%=data[i].firstName%> <%=data[i].lastName%></a> 
                        <br> <%=data[i].quote%> 
                    </div>
                <% } %>
            </div>
        </div>
    </div>
<%- include("partials/footer") %>